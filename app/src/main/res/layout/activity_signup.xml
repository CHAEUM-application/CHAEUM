<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       xmlns:tools="http://schemas.android.com/tools"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       tools:context=".SignUpActivity"
       android:background="@color/white">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageButton
                    android:id="@+id/backBtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="fitStart"
                    android:padding="0dp"
                    android:backgroundTint="@color/white"
                    android:background="@color/white"
                    android:src="@drawable/backpage_button" />


            <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="28dp"
                    android:layout_weight="1"
                    android:text="회원가입"
                    android:textAlignment="center"
                    android:textColor="@color/title_green"
                    android:textSize="22sp"
                    android:textStyle="bold"

            />

        </LinearLayout>


        <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="아이디"
                android:textSize="15sp"
                android:textColor="@color/black"

        />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="9dp"
        >

            <EditText
                    android:id="@+id/edit_joinID"
                    android:layout_width="190dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:hint="아이디 입력"
                    android:textSize="14sp"
                    android:paddingLeft="10dp"
                    android:inputType="text"
                    android:layout_weight="8"
                    android:theme="@style/EditTheme"
                    android:maxLines="1"

            />

            <Button
                    android:id="@+id/btn_CheckID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="중복확인"
                    android:textSize="14sp"
                    android:background="@drawable/greenborder"
                    android:textColor="@color/title_green"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
            />

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

            <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비밀번호"
                    android:textSize="15sp"
                    android:textColor="@color/black"
            />

            <TextView
                    android:id="@+id/checkIDPW"
                    android:layout_marginLeft="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
            />

        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="9dp"
        >

            <EditText
                    android:id="@+id/edit_joinPW"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/border"
                    android:paddingLeft="10dp"
                    android:hint="비밀번호 (영문,숫자 포함 10자이내)"
                    android:inputType="textPassword"
                    android:textSize="14sp"
                    android:theme="@style/EditTheme"
                    android:maxLines="1"/>


        </LinearLayout>

        <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="비밀번호확인"
                android:textSize="15sp"
                android:textColor="@color/black"
        />

        <EditText
                android:id="@+id/edit_checkPW"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/border"
                android:paddingLeft="10dp"
                android:hint="비밀번호와 동일"
                android:textSize="14sp"
                android:inputType="textPassword"
                android:theme="@style/EditTheme"
                android:maxLines="1"/>


            <TextView
                    android:id="@+id/textView4"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="이름"
                    android:textSize="15sp"
                />

        <EditText
                android:id="@+id/edit_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/border"
                android:paddingLeft="10dp"
                android:hint="사용자 이름 입력"
                android:textSize="14sp"
                android:theme="@style/EditTheme"
                android:maxLines="1"
                android:inputType="text"
                android:ems="10"
        />

        <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="생년월일"
                android:textColor="@color/black"
                android:textSize="15sp" />


        <DatePicker
                android:id="@+id/datepicker"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:backgroundTint="#3D3F41"
                android:calendarTextColor="#FFFFFF"
                android:calendarViewShown="false"
                android:datePickerMode="spinner"
                android:foregroundTint="#B3FFFFFF"
                android:headerBackground="#B3FFFFFF"
                android:yearListSelectorColor="#B3FFFFFF"
        />
    </LinearLayout>

    <Button
            android:id="@+id/btn_join"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/border"
            android:backgroundTint="@color/title_green"
            android:text="가입하기"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>